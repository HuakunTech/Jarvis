{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "ext-capability",
    "description": "Capability for the extension window",
    "windows": [
        "ext*"
    ],
    "remote": {
        "urls": [
            "http://localhost:1566/*"
        ]
    },
    "permissions": [
        {
            "identifier": "http:default",
            "allow": [
                {
                    "url": "https://*"
                },
                {
                    "url": "http://*"
                }
            ]
        },
        "app:default",
        "event:default",
        
        "fs:allow-app-write",
        "fs:allow-app-write-recursive",
        "fs:allow-appconfig-write",
        "fs:allow-exists",
        "fs:allow-mkdir",
        "fs:allow-stat",
        "fs:default",
        "fs:read-all",
        "fs:allow-appcache-write-recursive",
        
        "http:allow-fetch",
        
        "image:default",
        
        "menu:default",
        
        "os:allow-platform",
        "os:default",
        
        "path:default",
        
        
        "updater:default",
        "upload:allow-download",
        "upload:default",

        "webview:allow-create-webview",
        "webview:allow-create-webview-window",
        "webview:default",
        
        "window:allow-create",
        "window:allow-destroy",
        "window:allow-start-dragging",
        "window:default"
    ]
}