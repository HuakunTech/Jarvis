{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "windows": [
        "main",
        "toast*"
    ],
    "permissions": [
        "path:default",
        "event:default",
        "window:default",
        "window:allow-create",
        "window:allow-start-dragging",
        "window:allow-destroy",
        "window:allow-close",
        "webview:default",
        "webview:allow-create-webview",
        "webview:allow-create-webview-window",
        "app:default",
        "resources:default",
        "image:default",
        "menu:default",
        "tray:default",
        "store:default",
        "dialog:default",
        "dialog:allow-confirm",
        "dialog:allow-ask",
        "dialog:allow-open",
        "shell:default",
        "upload:default",
        "notification:default",
        "log:default",
        "global-shortcut:default",
        "fs:default",
        "os:default",
        "updater:default",
        "os:default",
        "shell:allow-open",
        "store:allow-clear",
        "store:allow-delete",
        "store:allow-entries",
        "store:allow-get",
        "store:allow-has",
        "store:allow-keys",
        "store:allow-length",
        "store:allow-load",
        "store:allow-reset",
        "store:allow-save",
        "store:allow-set",
        "store:allow-values",
        "upload:allow-download",
        "notification:allow-is-permission-granted",
        "notification:allow-notify",
        "notification:allow-request-permission",
        "log:allow-log",
        "global-shortcut:allow-is-registered",
        "global-shortcut:allow-register",
        "global-shortcut:allow-unregister",
        "global-shortcut:allow-register-all",
        "global-shortcut:allow-unregister-all",
        "fs:allow-exists",
        "fs:allow-stat",
        "fs:read-all",
        "fs:write-all",
        "fs:allow-rename",
        "fs:scope-temp-recursive",
        "fs:scope-temp",
        "fs:scope-home-recursive",
        "fs:allow-mkdir",
        "fs:allow-app-write",
        "fs:allow-app-write-recursive",
        "fs:allow-appcache-write",
        "fs:allow-appcache-write-recursive",
        "fs:allow-appconfig-write",
        "os:allow-platform",
        "clipboard:allow-clear",
        "clipboard:allow-execute",
        "clipboard:allow-has-files",
        "clipboard:allow-has-html",
        "clipboard:allow-has-image",
        "clipboard:allow-has-rtf",
        "clipboard:allow-has-text",
        "clipboard:allow-is-monitor-running",
        "clipboard:allow-read-files",
        "clipboard:allow-read-files-uris",
        "clipboard:allow-read-html",
        "clipboard:allow-read-image-base64",
        "clipboard:allow-read-image-binary",
        "clipboard:allow-read-rtf",
        "clipboard:allow-read-text",
        "clipboard:allow-start-monitor",
        "clipboard:allow-stop-monitor",
        "clipboard:allow-write-files-uris",
        "clipboard:allow-write-html",
        "clipboard:allow-write-html-and-text",
        "clipboard:allow-write-image-base64",
        "clipboard:allow-write-image-binary",
        "clipboard:allow-write-rtf",
        "clipboard:allow-write-text"
    ]
}