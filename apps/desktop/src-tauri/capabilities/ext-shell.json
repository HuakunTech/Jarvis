{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "ext-shell",
    "description": "Enable all shell permissions.",
    "windows": [
        "*:shell*"
    ],
    "remote": {
        "urls": [
            "http://localhost:*",
            "https://*.huakun.tech*"
        ]
    },
    "permissions": [
        "shell:allow-open",
        "shell:allow-kill",
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "name": "exec-ffmpeg",
                    "cmd": "ffmpeg",
                    "args": true,
                    "sidecar": false
                },
                {
                    "name": "exec-ffprobe",
                    "cmd": "ffprobe",
                    "args": true,
                    "sidecar": false
                },
                {
                    "name": "exec-bash",
                    "cmd": "bash",
                    "args": true,
                    "sidecar": false
                }
            ]
        },
        {
            "identifier": "shell:allow-spawn",
            "allow": [
                {
                    "name": "exec-ffmpeg",
                    "cmd": "ffmpeg",
                    "args": true,
                    "sidecar": false
                },
                {
                    "name": "exec-ffprobe",
                    "cmd": "ffprobe",
                    "args": true,
                    "sidecar": false
                },
                {
                    "name": "exec-bash",
                    "cmd": "bash",
                    "args": true,
                    "sidecar": false
                }
            ]
        },
        "shell:allow-stdin-write",
        "jarvis:allow-run-apple-script",
        "jarvis:allow-run-powershell"
    ]
}